# Apply gtk theming
exec_always ~/.config/scripts/import-gsettings.sh

# Set inner/outer gaps
gaps inner 2
gaps outer 0

# Hide titlebar on windows: 
default_border pixel 1

# Default Font
font pango:Source Code Pro 10

# Thin borders:
smart_borders on

# Set wallpaper:
exec swaybg -i ~/.config/background.pnd

#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
   swaybar_command waybar
}
