sudo loadkeys dk

nmcli device wifi connect "<SSID>" password "<password>"

cd /tmp

git clone --branch main https://github.com/morten-b/dotfiles.git

sudo nix --experimental-features "nix-command flakes" run github:nix-community/disko/latest -- --mode destroy,format,mount disk-config-T490.nix

sudo nixos-install --flake .#T490

sudo mkdir -p /mnt/usb

sudo mount /dev/sdb1 /mnt/usb

curl -sSL https://raw.githubusercontent.com/morten-b/dotfiles/disko/install.sh | sudo bash